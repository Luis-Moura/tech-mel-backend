# ===========================
# CONFIGURAÇÕES GERAIS
# ===========================

# Perfil Spring (dev, prod)
SPRING_PROFILE=prod

# URLs da aplicação (OBRIGATÓRIO)
APP_URL=https://seu-dominio-api.com
APP_URL_FRONTEND=https://seu-dominio-frontend.com

# ===========================
# BANCO DE DADOS POSTGRESQL (OBRIGATÓRIO)
# ===========================
DB_URL=jdbc:postgresql://seu-host-postgres:5432/techmel_db
DB_USERNAME=techmel_user
DB_PASSWORD=sua_senha_super_segura_postgres

# ===========================
# REDIS CACHE (OBRIGATÓRIO)
# ===========================
REDIS_HOST=seu-host-redis
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_super_segura_redis
REDIS_TIMEOUT=2000
REDIS_POOL_MAX_TOTAL=8
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=0

# ===========================
# JWT CONFIGURAÇÃO (OBRIGATÓRIO)
# ===========================
# Chave secreta DEVE ter pelo menos 64 caracteres (256 bits)
JWT_SECRET=sua_chave_jwt_super_segura_com_pelo_menos_64_caracteres_aqui_1234567890abcdef
# Token expira em 30 minutos (1800000ms)
JWT_EXPIRATION=1800000
# Refresh token expira em 5 dias (432000000ms)
JWT_REFRESH_EXPIRATION=432000000

# ===========================
# OAUTH2 GOOGLE (OBRIGATÓRIO SE USAR OAUTH2)
# ===========================
GOOGLE_CLIENT_ID=seu-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-sua-google-client-secret
# URL de callback OAuth2 (ajuste para seu domínio)
REDIRECT_URI=https://seu-dominio-api.com/login/oauth2/code/google
FRONTEND_CALLBACK_URI=https://seu-dominio-frontend.com/auth/callback

# ===========================
# CONFIGURAÇÃO DE EMAIL (OBRIGATÓRIO)
# ===========================
# Gmail SMTP (ou configure outro provedor)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
# Email e senha de aplicativo do Gmail
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua_senha_de_aplicativo_gmail
MAIL_FROM=seu-email@gmail.com

# ===========================
# ADMIN PADRÃO (OBRIGATÓRIO)
# ===========================
# Admin que será criado automaticamente na primeira execução
APP_ADMIN_EMAIL=admin@sua-empresa.com
APP_ADMIN_PASSWORD=senha_admin_super_segura_123
